<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rizwan.sigcrime.report.ReportGalleryActivity">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Upload Photos"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/spacing_large"
            android:paddingVertical="@dimen/spacing_xmedium">

            <ImageView
                android:id="@+id/report_Image1"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginBottom="@dimen/spacing_large"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/no_image" />

            <ImageView
                android:id="@+id/report_Image2"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginBottom="@dimen/spacing_large"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/no_image" />

            <ImageView
                android:id="@+id/report_Image3"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginBottom="@dimen/spacing_large"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/no_image" />

            <ImageView
                android:id="@+id/report_Image4"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginBottom="@dimen/spacing_large"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/no_image" />
        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button_white"
        android:paddingHorizontal="@dimen/spacing_xxxlarge"
        android:paddingVertical="@dimen/spacing_large"
        android:text="Dashboard"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>